  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Main (Default Ports)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "args": ["8080", "8081", "8082", "8083", "8084"],
      "env": {},
      "showLog": true,
      "trace": "verbose"
    },
    {
      "name": "Debug Main (Custom Ports)",
      "type": "go",
      "request": "launch",
      "mode": "debug",
      "program": "${workspaceFolder}/main.go",
      "args": [],
      "env": {},
      "showLog": true,
      "trace": "verbose"
    },
    {
      "name": "Debug Manager Tests (All)",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/manager",
      "args": ["-test.v"],
      "showLog": true,
      "trace": "verbose"
    },
    {
      "name": "Debug Manager Test: TestElectionAndFailure",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/manager",
      "args": ["-test.run", "TestElectionAndFailure", "-test.v"],
      "showLog": true,
      "trace": "verbose"
    },
    {
      "name": "Debug Manager Test: TestLeaderRecovery",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/manager",
      "args": ["-test.run", "TestLeaderRecovery", "-test.v"],
      "showLog": true,
      "trace": "verbose"
    },
    {
      "name": "Debug Worker Tests (All)",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${workspaceFolder}/worker",
      "args": ["-test.v"],
      "showLog": true,
      "trace": "verbose"
    },
    {
      "name": "Debug Current Test",
      "type": "go",
      "request": "launch",
      "mode": "test",
      "program": "${fileDirname}",
      "args": ["-test.run", "^${selectedText}$", "-test.v"],
      "showLog": true,
      "trace": "verbose"
    },
    {
      "name": "Debug Current Package",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${fileDirname}",
      "showLog": true,
      "trace": "verbose"
    },
    {
      "name": "Attach to Process",
      "type": "go",
      "request": "attach",
      "mode": "local",
      "processId": 0,
      "showLog": true,
      "trace": "verbose"
    }
  ]
}
